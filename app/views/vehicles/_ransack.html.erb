<div class="py-4">
  <%= search_form_for @q do |f| %>

    <div class="form-row">
      <div class="col-auto">
        <%#= f.label :year %>
        <%= f.select :year_model_eq, options_for_select(Vehicle.order(:year_model).map {|p| [ p.year_model ]}.uniq, @q.year_model_eq), {prompt: "Select Year"} , {class: 'form-control'} %>
      </div>

      <div class="col-auto">
        <%#= f.label :brand %>
        <%= f.select :vehicle_brand_id_eq, options_for_select(VehicleBrand.order(:name).map {|p| [ p.name, p.id ]}.uniq, @q.vehicle_brand_id_eq), {prompt: "Select Brand"}, {class: 'form-control'} %>
      </div>

      <div class="col-auto">
        <%#= f.label :model %>
        <%= f.grouped_collection_select :vehicle_model_id_eq, VehicleBrand.order(:name), :vehicle_model, :name, :id, :name, { include_blank: true, prompt: "Select Model"}, class: 'form-control' %>
      </div>

      <div class="col-auto">
        <%= f.submit "Search", class: 'btn btn-primary mb-2' %>
        <%= link_to "Clear", request.path, class:"btn btn-primary mb-2" %>
        <%= link_to 'Add Vehicle', new_vehicle_path, class: 'btn btn-primary mb-2' %>
      </div>
    </div>

  <% end %>

</div>
